<%- include('../partials/header') %>

<h2>Richiedi informazioni al comune</h2>

<% if (message) { %>
  <p><%= message %></p>
<% } %>

<form method="POST" action="/company/request-info">
  <label for="message">Scrivi la tua richiesta:</label><br>
  <textarea name="message" id="message" rows="6" style="width: 100%;" required></textarea><br><br>
  <button type="submit">Invia richiesta</button>
</form>

