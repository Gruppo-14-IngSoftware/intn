<%- include('../partials/header') %>

<h1>Richiesta Verifica Azienda</h1>

<% if (message) { %>
  <div class="alert"><%= message %></div>
<% } %>

<form action="/company/verify" method="POST" enctype="multipart/form-data">
  <div>
    <label for="documents">Carica i documenti (PDF, immagini):</label><br>
    <input type="file" name="documents" id="documents" multiple required>
  </div>
  
  <br>
  <button type="submit">Invia documenti</button>
</form>

<% if (user.verification && user.verification.status) { %>
  <p>Stato attuale verifica: <strong><%= user.verification.status %></strong></p>
<% } %>

<%- include('../partials/footer') %>
