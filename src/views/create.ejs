

<h1 class="text-center mt-4 mb-4">Crea Nuovo Evento</h1>

<form action="/events/create" method="POST" enctype="multipart/form-data" class="container" style="max-width:600px;">
    <div class="form-group mb-3">
        <label for="title">Titolo</label>
        <input type="text" class="form-control" id="title" name="title" required />
    </div>

    <div class="form-group mb-3">
        <label for="description">Descrizione</label>
        <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
    </div>

    <div class="form-group mb-3">
        <label for="location">Luogo</label>
        <input type="text" class="form-control" id="location" name="location" required />
    </div>

    <div class="row">
        <div class="form-group mb-3 col-md-6">
            <label for="date">Data</label>
            <input type="date" class="form-control" id="date" name="date" required />
        </div>

        <div class="form-group mb-3 col-md-6">
            <label for="time">Ora</label>
            <input type="time" class="form-control" id="time" name="time" required />
        </div>
    </div>

    <div class="form-group mb-3">
        <label for="tag">Categoria</label>
        <select class="form-select" id="tag" name="tag" required>
            <option value="" disabled selected>-- Seleziona categoria --</option>
            <option value="sport">Sport</option>
            <option value="lettura">Lettura</option>
            <option value="passeggiata">Passeggiata</option>
            <option value="musica">Musica</option>
            <option value="teatro">Teatro</option>
            <option value="altro">Altro</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="image">Immagine evento</label>
        <input type="file" class="form-control" id="image" name="image" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-success w-100">Crea Evento</button>
</form>


