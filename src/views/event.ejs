<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <title><%= locals.title %></title>
    <link rel="stylesheet" href="../public/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-Mz0p...=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />
    <style>
        body {
            font-family: sans-serif;
            margin: 0 auto;
            max-width: 700px;
            padding: 1rem;
            background: #f9f9f9;
        }

        .eventImage {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 1rem;
        }

        .eventTitle {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .eventDetails {
            color: #555;
            margin-bottom: 1rem;
        }

        .eventBox {
            display: flex;
            gap: 20px;
            margin-bottom: 1rem;
        }

        .eventBox i {
            cursor: pointer;
            font-size: 1.4rem;
            color: #444;
            transition: color 0.2s;
        }

        .eventBox i:hover {
            color: #000;
        }

        .comments {
            margin-top: 2rem;
        }

        .comment-box {
            margin-bottom: 1rem;
        }

        .comment-box textarea {
            width: 100%;
            padding: 0.5rem;
            resize: vertical;
            font-size: 1rem;
        }

        .comment-box button {
            margin-top: 0.5rem;
            padding: 0.5rem 1rem;
        }

        .comment {
            padding: 0.5rem;
            background: #fff;
            border-radius: 6px;
            margin-bottom: 0.5rem;
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }
        #map {
            height: 300px;
            border-radius: 10px;
            margin-bottom: 1rem;
        }
    </style>
</head>
<script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
<script>
    mapboxgl.accessToken = "<%= mapboxToken %>";

    const position = "Via Roma 10, 10123 Torino, Italia";

    fetch(`https://api.mapbox.com/geocoding/v5/mapbox.places/${encodeURIComponent(position)}.json?access_token=${mapboxgl.accessToken}`)
        .then(res => res.json())
        .then(data => {
            const coords = data.features[0].center;

            const map = new mapboxgl.Map({
                container: 'map',
                style: 'mapbox://styles/mapbox/streets-v12',
                center: coords,
                zoom: 13
            });

            new mapboxgl.Marker()
                .setLngLat(coords)
                .setPopup(new mapboxgl.Popup().setText(position))
                .addTo(map);
        })
        .catch(err => {
            console.error("Errore geocoding:", err);
            document.getElementById('map').innerText = 'Mappa non disponibile';
        });
</script>
<body>
<img src="<%= locals.image %>" alt="Immagine evento" class="eventImage">

<div class="eventTitle"><%= locals.title %></div>

<div class="eventDetails">
    <p><strong>Data:</strong> <%= locals.date %></p>
    <p><strong>Luogo:</strong> <%= locals.location %></p>
    <p><%= locals.description %></p>
</div>

<div class="eventBox">
    <i class="fa-regular fa-bell" title="Iscriviti"></i>
    <i class="fa-regular fa-comment-dots" title="Commenta"></i>
    <i class="fa-solid fa-flag" title="Segnala evento"></i>
    <i class="fa-solid fa-pen-to-square" title="Modifica evento"></i>
</div>

<div id="map"></div>

<div class="comments">
    <h3>Commenti</h3>

    <form action="/event/<%= locals._id %>/comment" method="POST" class="comment-box">
        <textarea name="comment" rows="3" placeholder="Scrivi un commento..." required></textarea>
        <br>
        <button type="submit">Pubblica</button>
    </form>

    <% if (locals.comments && locals.comments.length > 0) { %>
        <% locals.comments.forEach(function(comment) { %>
            <div class="comment">
                <p><%= comment.text %></p>
                <small>Da: <%= comment.author %></small>
            </div>
        <% }) %>
    <% } else { %>
        <p>Nessun commento ancora.</p>
    <% } %>
</div>
</body>
</html>
